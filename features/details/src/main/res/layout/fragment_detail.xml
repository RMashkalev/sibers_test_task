<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#707070">
	<androidx.cardview.widget.CardView
		android:id="@+id/pokemon_card"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:cardCornerRadius="8dp"
		app:layout_constraintTop_toTopOf="parent">
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<ImageView
				android:id="@+id/imageView"
				android:layout_width="150dp"
				android:layout_height="150dp"
				app:srcCompat="@drawable/placeholder"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
			/>
			<TextView
				android:id="@+id/pokemon_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:layout_marginTop="8dp"
				android:text="Имя покемона"
				android:textStyle="bold"
				android:textSize="18sp"
				app:layout_constraintTop_toBottomOf="@+id/imageView"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"/>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/main_stats_card"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toBottomOf="@+id/pokemon_card"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:cardCornerRadius="8dp">
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<ImageView
				android:id="@+id/img_atk"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_marginBottom="16dp"
				android:layout_marginTop="8dp"
				app:srcCompat="@drawable/img_attack"
				app:layout_constraintStart_toStartOf="@+id/mainStats"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintEnd_toStartOf="@+id/stat_atk"
				app:layout_constraintTop_toBottomOf="@+id/mainStats"
				app:layout_constraintBottom_toBottomOf="parent"/>
			<TextView
				android:id="@+id/stat_hp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="hp"
				app:layout_constraintStart_toEndOf="@+id/img_hp"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintEnd_toEndOf="@+id/mainStats"
				app:layout_constraintTop_toTopOf="@+id/img_hp"
				app:layout_constraintBottom_toBottomOf="@+id/img_hp"/>
			<TextView
				android:id="@+id/stat_atk"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="atk"
				app:layout_constraintStart_toEndOf="@+id/img_atk"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintEnd_toStartOf="@+id/img_def"
				app:layout_constraintTop_toTopOf="@+id/img_atk"
				app:layout_constraintBottom_toBottomOf="@+id/img_atk"/>
			<TextView
				android:id="@+id/stat_def"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="def"
				app:layout_constraintStart_toEndOf="@+id/img_def"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintEnd_toStartOf="@+id/img_hp"
				app:layout_constraintTop_toTopOf="@+id/img_def"
				app:layout_constraintBottom_toBottomOf="@+id/img_def"/>
			<TextView
				android:id="@+id/mainStats"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="16dp"
				android:layout_marginStart="16dp"
				android:layout_marginTop="8dp"
				android:text="Основные характеристики"
				android:textStyle="bold"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"/>
			<ImageView
				android:id="@+id/img_hp"
				android:layout_width="24dp"
				android:layout_height="24dp"
				app:srcCompat="@drawable/img_hp"
				app:layout_constraintStart_toEndOf="@+id/stat_def"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintEnd_toStartOf="@+id/stat_hp"
				app:layout_constraintBottom_toBottomOf="@+id/stat_def"
				app:layout_constraintTop_toTopOf="@+id/stat_def"/>
			<ImageView
				android:id="@+id/img_def"
				android:layout_width="24dp"
				android:layout_height="24dp"
				app:srcCompat="@drawable/img_def"
				app:layout_constraintStart_toEndOf="@+id/stat_atk"
				app:layout_constraintHorizontal_bias="0.5"
				app:layout_constraintEnd_toStartOf="@+id/stat_def"
				app:layout_constraintTop_toTopOf="@+id/stat_atk"
				app:layout_constraintBottom_toBottomOf="@+id/stat_atk"/>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/secondary_stats_card"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		app:layout_constraintTop_toBottomOf="@+id/main_stats_card"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:cardCornerRadius="8dp">
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView
				android:id="@+id/secondary_stats"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="16dp"
				android:layout_marginStart="16dp"
				android:layout_marginTop="8dp"
				android:text="Дополнительные характеристики"
				android:textStyle="bold"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"/>
			<ImageView
				android:id="@+id/imageView5"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_marginTop="16dp"
				app:srcCompat="@drawable/img_height"
				app:layout_constraintStart_toStartOf="@+id/secondary_stats"
				app:layout_constraintTop_toBottomOf="@+id/secondary_stats"/>
			<TextView
				android:id="@+id/stat_height"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:text="height"
				app:layout_constraintTop_toTopOf="@+id/imageView5"
				app:layout_constraintStart_toEndOf="@+id/imageView5"
				app:layout_constraintBottom_toBottomOf="@+id/imageView5"/>
			<ImageView
				android:id="@+id/imageView6"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_marginTop="16dp"
				app:srcCompat="@drawable/img_weigth"
				app:layout_constraintTop_toBottomOf="@+id/imageView5"
				app:layout_constraintStart_toStartOf="@+id/imageView5"
				app:layout_constraintEnd_toEndOf="@+id/imageView5"/>
			<TextView
				android:id="@+id/stat_weigth"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:text="weigth"
				app:layout_constraintStart_toEndOf="@+id/imageView6"
				app:layout_constraintTop_toTopOf="@+id/imageView6"
				app:layout_constraintBottom_toBottomOf="@+id/imageView6"/>
			<TextView
				android:id="@+id/pokemon_generation_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:text="Род покемона"
				android:textStyle="bold"
				app:layout_constraintTop_toBottomOf="@+id/imageView6"
				app:layout_constraintStart_toStartOf="@+id/secondary_stats"
				app:layout_constraintEnd_toEndOf="@+id/secondary_stats"/>
			<TextView
				android:id="@+id/pokemon_generations"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="16dp"
				android:layout_marginTop="16dp"
				android:text="generation"
				app:layout_constraintStart_toStartOf="@+id/pokemon_generation_title"
				app:layout_constraintTop_toBottomOf="@+id/pokemon_generation_title"
				app:layout_constraintEnd_toEndOf="@+id/pokemon_generation_title"
				app:layout_constraintBottom_toBottomOf="parent"/>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>